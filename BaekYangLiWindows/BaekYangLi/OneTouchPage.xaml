<Page x:Class="BaekYangLi.OneTouchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BaekYangLi"
      mc:Ignorable="d" 
      
      d:DesignHeight="400" d:DesignWidth="545"
      Title="OneTouchPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="300*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Image  Source="img/bar.png" Stretch="Fill"/>
                    <Label x:Name="StartStationName" Content="찾는중" VerticalAlignment="Center" FontWeight="Bold" Foreground="#FFE8E8E8" FontSize="50" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="45*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Button Content=""/>
                <Button Content="" Grid.Column="2"/>

            </Grid>
        </Grid>

    </Grid>
</Page>
